; solar system (not to scale)
(define (moon)
    (color gray)
    (draw-sphere))

(define (earth)
    (color blue)
    (draw-sphere)
    (rotate (% (/ (msecs) 10) 360) (vector 1 0 0))
    (translate (vector 0 2 0))
    (draw-grid)
    (scale 0.3)
    (moon))

(define (mars)
    (color red)
    (draw-sphere))

(define (sun)
    (color yellow)
    (draw-sphere)
    (push)
        (rotate (% (/ (msecs) 20) 360) (vector 0 1 0))
        (translate (vector 2.5 0 0))
        (draw-grid)
        (scale 0.4)
        (earth)
    (pop)
    (push)
        (rotate (% (/ (msecs) 20) 360) (vector 0 0 1))
        (translate (vector 1.4 0 0))
        (draw-grid)
        (scale 0.18)
        (mars)
    (pop))

(every-frame
    (rotate -45 x-axis)
    (draw-grid)
    (scale 0.25)
    (sun))
